<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_backgound">

        <TextView
            android:id="@+id/text_dlg_tel_title"
            style="@style/SubHeadSemiBoldPrimaryColor"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:scaleType="center"
            android:text="전화번호"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/image_update_user_info_tel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_dlg_tel_title"
            app:layout_constraintTop_toTopOf="@+id/text_dlg_tel_title"
            app:layout_constraintBottom_toBottomOf="@+id/text_dlg_tel_title"
            app:srcCompat="@drawable/ic_phone" />

        <EditText
            android:id="@+id/edittext_tel_input1"
            style="@style/Body"
            android:background="@drawable/edittext_regular"
            android:inputType="text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:hint="010"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_dlg_tel_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/text_update_tel_bar1"/>

        <TextView
            android:id="@+id/text_update_tel_bar1"
            style="@style/SubHeadSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:layout_constraintTop_toTopOf="@+id/edittext_tel_input1"
            app:layout_constraintStart_toEndOf="@+id/edittext_tel_input1"
            app:layout_constraintBottom_toBottomOf="@id/edittext_tel_input1"
            app:layout_constraintEnd_toStartOf="@+id/edittext_tel_input2"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            />

        <EditText
            android:id="@+id/edittext_tel_input2"
            style="@style/Body"
            android:background="@drawable/edittext_regular"
            android:inputType="text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="1234"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_update_tel_bar1"
            app:layout_constraintStart_toEndOf="@+id/text_update_tel_bar1"
            app:layout_constraintBottom_toBottomOf="@+id/text_update_tel_bar1"
            app:layout_constraintEnd_toStartOf="@+id/text_join_tel_bar2"
            />

        <TextView
            android:id="@+id/text_join_tel_bar2"
            style="@style/SubHeadSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:layout_constraintTop_toTopOf="@+id/edittext_tel_input2"
            app:layout_constraintStart_toEndOf="@+id/edittext_tel_input2"
            app:layout_constraintBottom_toBottomOf="@id/edittext_tel_input2"
            app:layout_constraintEnd_toStartOf="@+id/edittext_tel_input3"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/edittext_tel_input3"
            style="@style/Body"
            android:background="@drawable/edittext_regular"
            android:inputType="text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="5678"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_join_tel_bar2"
            app:layout_constraintStart_toEndOf="@+id/text_join_tel_bar2"
            app:layout_constraintBottom_toBottomOf="@+id/text_join_tel_bar2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            />

        <Button
            android:id="@+id/button_dlg_tel_update"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_regular"
            app:layout_constraintTop_toBottomOf="@+id/edittext_tel_input1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="수정"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>