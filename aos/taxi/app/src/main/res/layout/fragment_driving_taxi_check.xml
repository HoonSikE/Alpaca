<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/button_driving_taxi_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_driving_taxi_check_top_left"
                    style="@style/HeadBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="+ 버튼을 눌러 사진을 남겨주세요!"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/card_item_MyPageAlbum_img2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_driving_taxi_check_top_left">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_item_MyPageAlbum_img"
                    app:layout_constraintTop_toBottomOf="@+id/text_driving_taxi_check_top_left">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/card_item_MyPageAlbum_img2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_MyPageAlbum_img">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_item_MyPageAlbum_img3"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_MyPageAlbum_img">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/card_item_MyPageAlbum_img2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_MyPageAlbum_img3">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img5"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_item_MyPageAlbum_img"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_MyPageAlbum_img4">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img6"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/card_item_MyPageAlbum_img2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_MyPageAlbum_img5">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img7"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item_MyPageAlbum_img8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/card_item_MyPageAlbum_img"
                    app:layout_constraintTop_toBottomOf="@+id/card_item_MyPageAlbum_img6">

                    <ImageView
                        android:id="@+id/image_item_MyPageAlbum_img8"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/img_photo"
                        android:padding="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:visibility="invisible" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/button_driving_taxi_check"
            style="@style/Body"
            android:textColor="@color/primaryTextColor"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_regular"
            android:text="사진 올리기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/black"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>