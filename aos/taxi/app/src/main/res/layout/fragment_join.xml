<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_join"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_join_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="3dp"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <TextView
                style="@style/SubHeadBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="회원가입"
                android:layout_gravity="center_vertical"
                />

        </com.google.android.material.appbar.MaterialToolbar>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_join"
            />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_join"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--User Image-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_join_user_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/circle_profile"
                    android:src="@drawable/img_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/background_join_user_image_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/edittext_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/image_join_user_image"
                    app:layout_constraintEnd_toEndOf="@+id/image_join_user_image"
                    app:srcCompat="@drawable/img_edit" />

                <ImageView
                    android:id="@+id/image_join_user_image_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/primaryColor"
                    app:layout_constraintBottom_toBottomOf="@+id/image_join_user_image"
                    app:layout_constraintEnd_toEndOf="@+id/image_join_user_image"
                    app:srcCompat="@drawable/img_edit" />

                <TextView
                    android:id="@+id/text_join_user_image"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="프로필 사진"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_join_user_image" />

                <TextView
                    android:id="@+id/text_required_input"
                    style="@style/SubHeadSemiBoldPrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:paddingRight="16dp"
                    android:text="* 필수 입력"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_join_user_image" />

                <!-- 이메일 아이디 -->
                <TextView
                    android:id="@+id/text_join_id"
                    style="@style/SubHeadSemiBoldPrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="* 이메일 아이디"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_join_user_image" />

                <EditText
                    android:id="@+id/editText_join_id"
                    style="@style/Body"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="이메일을 입력하세요"
                    android:paddingLeft="48dp"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_id" />

                <ImageView
                    android:id="@+id/image_join_user_info_email"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/editText_join_id"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_id"
                    app:srcCompat="@drawable/ic_email" />

                <!-- 비밀번호 -->
                <TextView
                    android:id="@+id/text_join_pw"
                    style="@style/SubHeadSemiBoldPrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="* 비밀번호"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_id"
                    />

                <EditText
                    android:id="@+id/editText_join_pw"
                    style="@style/Body"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="비밀번호를 입력하세요"
                    android:paddingLeft="48dp"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_pw" />

                <ImageView
                    android:id="@+id/image_join_user_password"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/editText_join_pw"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_pw"
                    app:srcCompat="@drawable/ic_lock_close" />

                <TextView
                    android:id="@+id/text_join_pw_check"
                    style="@style/SubHeadSemiBoldPrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="* 비밀번호 재입력"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_pw"
                    />

                <EditText
                    android:id="@+id/editText_join_pw_check"
                    style="@style/Body"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="비밀번호를 재입력하세요"
                    android:paddingLeft="48dp"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_pw_check" />

                <ImageView
                    android:id="@+id/image_join_user_password2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/editText_join_pw_check"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_pw_check"
                    app:srcCompat="@drawable/ic_lock_close" />

                <!-- 이름 -->
                <TextView
                    android:id="@+id/text_join_name"
                    style="@style/SubHeadSemiBoldPrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="* 이름"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_pw_check"
                    />

                <EditText
                    android:id="@+id/editText_join_name"
                    style="@style/Body"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="이름을 입력하세요"
                    android:paddingLeft="48dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_name" />

                <ImageView
                    android:id="@+id/image_join_user_info_name"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/editText_join_name"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_name"
                    app:srcCompat="@drawable/ic_profile" />

                <!-- 전화번호 -->
                <TextView
                    android:id="@+id/text_join_tel"
                    style="@style/SubHeadSemiBoldPrimaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="* 전화번호"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_name"

                    />

                <EditText
                    android:id="@+id/editText_join_tel"
                    style="@style/Body"
                    android:layout_width="64dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="010"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel" />

                <TextView
                    android:id="@+id/text_join_tel_bar"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="24dp"
                    android:text="-"
                    app:layout_constraintStart_toEndOf="@+id/editText_join_tel"
                    app:layout_constraintEnd_toStartOf="@+id/editText_join_tel2"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"
                    />

                <EditText
                    android:id="@+id/editText_join_tel2"
                    style="@style/Body"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="1234"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toEndOf="@+id/text_join_tel_bar"
                    app:layout_constraintEnd_toStartOf="@+id/text_join_tel_bar2"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel" />

                <TextView
                    android:id="@+id/text_join_tel_bar2"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:text="-"
                    app:layout_constraintStart_toEndOf="@+id/editText_join_tel2"
                    app:layout_constraintEnd_toStartOf="@+id/editText_join_tel3"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"
                    />

                <EditText
                    android:id="@+id/editText_join_tel3"
                    style="@style/Body"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="5678"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toEndOf="@+id/text_join_tel_bar2"
                    app:layout_constraintEnd_toStartOf="@+id/button_join_tel_auth"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel" />

                <Button
                    android:id="@+id/button_join_tel_auth"
                    style="@style/BodyWhite"
                    android:layout_width="96dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_regular"
                    android:text="인증"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_tel3"
                    app:layout_constraintBottom_toBottomOf="@+id/editText_join_tel3"
                    app:layout_constraintStart_toEndOf="@+id/editText_join_tel3"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Home Address -->
                <TextView
                    android:id="@+id/text_join_home_address"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="집 주소"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_tel3" />

                <EditText
                    android:id="@+id/editText_join_home_address"
                    style="@style/Body"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="집 주소를 입력하세요"
                    android:paddingLeft="48dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_home_address" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_join_home_address"
                    android:layout_width="360dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="16dp"
                    android:elevation="12dp"
                    android:visibility="invisible"
                    android:background="@drawable/reycler_comment"
                    android:padding="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/editText_join_home_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <ImageView
                    android:id="@+id/image_join_user_info_home_address"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/editText_join_home_address"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_home_address"
                    app:srcCompat="@drawable/ic_home" />


                <!-- Office Address -->
                <TextView
                    android:id="@+id/text_join_company_address"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="회사 주소"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_home_address" />

                <EditText
                    android:id="@+id/editText_join_company_address"
                    style="@style/Body"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_regular"
                    android:ems="10"
                    android:hint="회사 주소를 입력하세요"
                    android:paddingLeft="48dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_company_address" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_join_company_address"
                    android:layout_width="360dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="16dp"
                    android:elevation="12dp"
                    android:visibility="invisible"
                    android:background="@drawable/reycler_comment"
                    android:padding="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/editText_join_company_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <ImageView
                    android:id="@+id/image_join_user_info_company_address"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/editText_join_company_address"
                    app:layout_constraintTop_toTopOf="@+id/editText_join_company_address"
                    app:srcCompat="@drawable/ic_company" />

<!--                &lt;!&ndash; toggle provider &ndash;&gt;-->
<!--                <TextView-->
<!--                    android:id="@+id/text_join_is_each_provider"-->
<!--                    style="@style/SubHeadSemiBold"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="16dp"-->
<!--                    android:layout_marginTop="24dp"-->
<!--                    android:text="차량 제공자이신가요?"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@id/editText_join_company_address" />-->

<!--                <Switch-->
<!--                    android:id="@+id/switch_join_is_each_provider"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginEnd="16dp"-->
<!--                    android:switchMinWidth="64dp"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="@id/text_join_is_each_provider"-->
<!--                    app:layout_constraintBottom_toBottomOf="@+id/text_join_is_each_provider"/>-->

                <Button
                    android:id="@+id/button_join_login"
                    style="@style/BodyWhite"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_regular"
                    android:text="회원 가입"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_join_user_info_company_address" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBar_join_loading"
            style="?android:attr/progressBarStyle"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>