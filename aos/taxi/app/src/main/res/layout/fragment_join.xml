<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_join"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_join_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="3dp"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <TextView
                style="@style/SubHeadBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="회원가입"
                android:layout_gravity="center_vertical"
                />

        </com.google.android.material.appbar.MaterialToolbar>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_join"
            />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_join"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <!--User Image-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_join_user_image"
                    android:src="@drawable/img_user"
                    android:background="@drawable/circle_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    />
                <ImageView
                    android:id="@+id/image_join_user_image_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/image_join_user_image"
                    app:layout_constraintEnd_toEndOf="@+id/image_join_user_image"
                    app:srcCompat="@drawable/ic_user_info_email" />

                <TextView
                    android:id="@+id/text_join_user_image"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="프로필 사진"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_join_user_image"
                    />
                <!-- 이메일 아이디 -->
                <TextView
                    android:id="@+id/text_join_id"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="* 이메일 아이디"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_join_user_image"
                    />
                <!-- 이메일 아이디 -->
                <TextView
                    android:id="@+id/text_required_input"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="* 필수 입력"
                    android:textSize="16dp"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_join_user_image"
                    />

                <EditText
                    android:id="@+id/editText_join_id"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="이메일을 입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_id"
                    />

                <TextView
                    android:id="@+id/text_join_pw"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="* 비밀번호"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_id"

                    />

                <EditText
                    android:id="@+id/editText_join_pw"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="비밀번호를 입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_pw"
                    />

                <TextView
                    android:id="@+id/text_join_pw_check"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="* 비밀번호 재입력"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_pw"

                    />

                <EditText
                    android:id="@+id/editText_join_pw_check"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="비밀번호를 재입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_pw_check"
                    />

                <TextView
                    android:id="@+id/text_join_name"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="* 이름"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_pw_check"

                    />

                <EditText
                    android:id="@+id/editText_join_name"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="이름을 입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_name"
                    />

                <TextView
                    android:id="@+id/text_join_tel"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="* 전화번호"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_name"

                    />

                <EditText
                    android:id="@+id/editText_join_tel"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="전화번호를 재입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"
                    />

                <TextView
                    android:id="@+id/text_join_tel_bar"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="-"
                    app:layout_constraintStart_toEndOf="@+id/editText_join_tel"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"

                    />

                <EditText
                    android:id="@+id/editText_join_tel2"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:hint="전화번호를 재입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toEndOf="@+id/text_join_tel_bar"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"
                    />

                <TextView
                    android:id="@+id/text_join_tel_bar2"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="-"
                    app:layout_constraintStart_toEndOf="@+id/editText_join_tel2"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"

                    />

                <EditText
                    android:id="@+id/editText_join_tel3"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="전화번호를 재입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toEndOf="@+id/text_join_tel_bar2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_tel"
                    />

                <!-- Home Address -->
                <TextView
                    android:id="@+id/text_join_home_address"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="집 주소"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_tel3"
                    />

                <EditText
                    android:id="@+id/editText_join_home_address"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="집 주소를 입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_home_address"
                    />

                <!-- Office Address -->
                <TextView
                    android:id="@+id/text_join_company_address"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="회사 주소"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_home_address"
                    />

                <EditText
                    android:id="@+id/editText_join_company_address"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginHorizontal="16dp"
                    style="@style/Body"
                    android:layout_marginTop="16dp"
                    android:hint="회사 주소를 입력하세요"
                    android:background="@drawable/edittext_regular"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textColorHint="@color/hintGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_join_company_address"
                    />

                <!-- toggle provider -->
                <TextView
                    android:id="@+id/text_join_is_each_provider"
                    style="@style/SubHeadSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:text="차량 제공자이신가요?"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText_join_company_address"
                    />

                <Switch
                    android:id="@+id/switch_join_is_each_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchMinWidth="64dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_join_is_each_provider" />

                <Button
                    android:id="@+id/button_join_login"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="48dp"
                    android:text="가입 여부 확인"
                    android:background="@drawable/button_regular"
                    style="@style/BodyWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_join_is_each_provider"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBar_join_loading"
            style="?android:attr/progressBarStyle"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>